@model IEnumerable<string>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
@Html.ActionLink("Home", "List", "Product", null, htmlAttributes: new { @class = "btn btn-block btn-default btn-lg "+ (ViewBag.SelectedCategory == null ? "btn-primary" : "" ) })
<div class="menu">
@foreach (var item in Model)
{
        @Html.RouteLink(item, new
    {
        controller = "Product",
        action = "List",
        category = item,
        page = 1
    }, new
    {
        @class = "btn btn-block btn-default btn-lg"
        +(item == ViewBag.SelectedCategory ? " btn-primary" : "")
    })
}
    </div>